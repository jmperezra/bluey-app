<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="@dimen/spacing"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@tools:sample/avatars" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_error"
        style="@style/TextAppearance.BlueyApp.Text.TitleError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_vertical"
        tools:text="Título del Error" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description_error"
        style="@style/TextAppearance.BlueyApp.Text.BodyError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Se ha producido un error en la conexión" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_retry_error"
        style="@style/Widget.BlueyApp.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginVertical="@dimen/spacing_vertical"
        android:text="@string/button_retry_connection" />

</androidx.constraintlayout.widget.ConstraintLayout>