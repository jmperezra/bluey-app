<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spacing"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/error_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_error_text"
            style="@style/TextAppearance.BlueyApp.Text.TitleError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Título del Error" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description_error_text"
            style="@style/TextAppearance.BlueyApp.Text.BodyError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Se ha producido un error en la conexión" />

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/retry_error_button"
        style="@style/Widget.BlueyApp.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_vertical"
        android:text="@string/button_retry_connection" />

</androidx.constraintlayout.widget.ConstraintLayout>