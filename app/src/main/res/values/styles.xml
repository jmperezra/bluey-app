<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    El patrón estándar es: Category.AppName.Component.Variant
    Category: Widget (para vistas), TextAppearance (para textos), Shape (para formas).
    AppName: El nombre o abreviatura de tu app (para evitar colisiones con estilos de Android).
    Component: Qué es (Button, ListItem, ImageView).
    Variant: Contexto específico (Icon, Title, Caption).
    -->

    <!-- Textos -->
    <style name="TextAppearance.BlueyApp.ListItem.Title" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="TextAppearance.BlueyApp.Text.TitleError" parent="TextAppearance.Material3.TitleLarge.Emphasized">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.BlueyApp.Text.BodyError" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Botones -->
    <style name="Widget.BlueyApp.Button" parent="Widget.Material3.Button">

    </style>

    <!-- ListItem Component -->
    <style name="AppImageListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/width_size_media_listitem</item>
    </style>

    <!-- End ListItem Component -->

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- toolbar -->
    <style name="AppMainToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/md_theme_primary</item>
    </style>

    <style name="AppCollapseDetailToolbar" parent="Widget.Material3.CollapsingToolbar.Medium">
        <item name="collapsedTitleTextColor">@color/md_theme_primary</item>
        <item name="expandedTitleTextColor">@color/md_theme_primary</item>
        <item name="android:background">@color/md_theme_surface</item>
        <item name="contentScrim">@color/md_theme_surface</item>
    </style>

    <style name="AppDetailToolbar" parent="AppMainToolbar">
        <item name="titleCentered">false</item>
        <item name="navigationIconTint">@color/md_theme_primary</item>
    </style>

    <style name="AppBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextColor">@color/md_theme_primary</item>
        <item name="itemIconTint">@color/md_theme_primary</item>
    </style>

    <style name="AppChip" parent="@style/ShapeAppearanceOverlay.Material3.Chip">
        <item name="chipBackgroundColor">@color/md_theme_primaryContainer</item>
    </style>

</resources>