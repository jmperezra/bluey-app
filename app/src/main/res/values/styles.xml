<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    El patrón estándar es: Category.AppName.Component.Variant
    Category: Widget (para vistas), TextAppearance (para textos), Shape (para formas).
    AppName: El nombre o abreviatura de tu app (para evitar colisiones con estilos de Android).
    Component: Qué es (Button, ListItem, ImageView).
    Variant: Contexto específico (Icon, Title, Caption).
    -->

    <!-- Textos -->
    <style name="TextAppearance.BlueyApp.ListItem.Title" parent="TextAppearance.Material3.TitleSmall.Emphasized">
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="TextAppearance.BlueyApp.ListItem.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="TextAppearance.BlueyApp.Text.TitleError" parent="TextAppearance.Material3.TitleLarge.Emphasized">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginVertical">@dimen/spacing_vertical</item>
    </style>

    <style name="TextAppearance.BlueyApp.Text.BodyError" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.BlueyApp.Card" parent="Widget.Material3.CardView.Outlined">

    </style>

    <style name="TextAppearance.BlueyApp.Card.Title" parent="TextAppearance.Material3.TitleMedium.Emphasized">

    </style>

    <style name="TextAppearance.BlueyApp.Card.SubTitle" parent="TextAppearance.Material3.TitleSmall.Emphasized">

    </style>

    <style name="TextAppearance.BlueyApp.Card.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <!-- Widgets -->

    <style name="Widget.BlueyApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/md_theme_primary</item>
    </style>

    <style name="Widget.BlueyApp.Toolbar.Main" parent="Widget.BlueyApp.Toolbar">
        <item name="titleCentered">true</item>
    </style>

    <style name="Widget.BlueyApp.Toolbar.Detail">

    </style>

    <style name="Widget.BlueyApp.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextColor">@color/md_theme_primary</item>
        <item name="itemIconTint">@color/md_theme_primary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.BlueyApp.Button" parent="Widget.Material3.Button" />

    <style name="Widget.BlueyApp.ListItem.Image" parent="">
        <item name="android:layout_width">@dimen/image_size_xl</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>