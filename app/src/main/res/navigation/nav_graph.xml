<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/characters_fragment">

    <fragment
        android:id="@+id/characters_fragment"
        android:name="com.jmperezra.bluey.feature.characters.presentation.CharactersFragment"
        tools:layout="@layout/fragment_characters">

        <action
            android:id="@+id/action_characters_fragment_to_character_detail_fragment"
            app:destination="@id/character_detail_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/character_detail_fragment"
        android:name="com.jmperezra.bluey.feature.characters.presentation.CharacterDetailFragment"
        tools:layout="@layout/fragment_character_detail">

        <argument
            android:name="characterId"
            app:argType="string" />

    </fragment>

</navigation>